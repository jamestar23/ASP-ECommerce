@model ProductListVM

<div class="container">
    @*<h5>@Model.SelectedCategoryName</h5>*@
    <h5>Featured Products</h5>
    <hr />
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow prod-item">
                    <img class="card-img-top" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block; object-fit:contain" src=@product.ImageUrl data-holder-rendered="true">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>    
                        <hr />
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-subtitle"><strong>$@product.Fee</strong></h5>
                            <span class="badge badge-light">@product.Category.Name</span>
                        </div>
                        <hr />
                        <p class="card-text">@product.Description</p>
                    </div>
                    <div class="card-footer text-muted">
                        <div class="btn-group">
                            <a asp-controller="Product"
                               asp-action="Details"
                               asp-route-id=@product.ProductId
                               class="btn btn-sm btn-outline-secondary">Details</a>
                            <a asp-controller="ShoppingCart"
                               asp-action="AddToShoppingCart"
                               asp-route-productId=@product.ProductId
                               class="btn btn-sm btn-outline-secondary">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


