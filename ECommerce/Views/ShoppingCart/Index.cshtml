@model ShoppingCart

<h2>Shopping Cart</h2>
<hr />

<table class="table table-bordered">
    <tr>
        <th>Product</th>
        <th>Fee</th>
        <th>action</th>
    </tr>

    @foreach (var item in Model.ShoppingCartItems)
    {
        <tr>
            <td class="text-left">@item.Product.Name</td>
            <td class="text-left">@item.Amount</td>
            <td class="text-left">
                <a asp-controller="ShoppingCart"
                   asp-action="RemoveFromShoppingCart"
                   asp-route-productId=@item.Product.ProductId
                   class="btn btn-sm btn-outline-secondary">Remove</a>
            </td>
        </tr>
    }

    <tr>
        <th><strong>Total</strong></th>
        <th><strong>@Model.GetShoppingCartTotal()</strong></th>
        <th>
            <a asp-controller="Product"
               asp-action="List"
               class="btn btn-sm btn-outline-secondary">Back</a>
        </th>
    </tr>
</table>